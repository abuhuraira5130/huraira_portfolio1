{
  "build": {
    "builder": "RAILPACK"
  },
  "deploy": {
    "startCommand": "python manage.py collectstatic --noinput && gunicorn config.wsgi --bind 0.0.0.0:$PORT --workers 3 --log-file -",
    "restartPolicy": {
      "onFailure": true,
      "maxRetries": 10
    },
    "watchPaths": [
      "/backend/**"
    ]
  }
}