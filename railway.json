{
  "build": {
    "builder": "RAILPACK",
    "pythonVersion": "3.11",
    "buildCommand": "python3 -m pip install -r backend/requirements.txt && python3 backend/manage.py collectstatic --noinput"
  },
  "deploy": {
    "startCommand": "cd backend && gunicorn config.wsgi --bind 0.0.0.0:$PORT --workers 3 --log-file -",
    "healthcheckPath": "/health/",
    "restartPolicy": {
      "onFailure": true,
      "maxRetries": 10
    }
  }
}
